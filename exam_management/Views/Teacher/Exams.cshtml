@model List<ExamManagement.Models.Exam>

<h2>Exam Management</h2>
<a asp-action="CreateExam" class="btn btn-primary mb-3">Create New Exam</a>

<table class="table table-bordered">
    <thead>
        <tr><th>ID</th><th>Title</th><th>Subject</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Title</td>
                <td>@e.Subject?.Name</td>
                <td>
                    <a asp-action="ExamDetail" asp-route-id="@e.Id" class="btn btn-info btn-sm">Detail & Submissions</a>
                </td>
            </tr>
        }
    </tbody>
</table>
