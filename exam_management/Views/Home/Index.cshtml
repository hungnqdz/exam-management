@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center">
    <h1 class="display-4">Chào mừng đến với Hệ thống Quản lý Thi</h1>
    <p>Vui lòng chọn chức năng từ thanh điều hướng.</p>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
</div>

<footer class="footer mt-auto py-3 bg-light fixed-bottom">
    <div class="container text-center">
        <span id="dynamic-footer"></span>
    </div>
</footer>

<script>
    const urlParams = new URLSearchParams(window.location.search);
    const footerContent = urlParams.get('footer');
    if (footerContent) {
        document.getElementById('dynamic-footer').innerHTML = footerContent;
    }
</script>
